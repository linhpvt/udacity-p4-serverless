{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "todo",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "dueDate": {
      "type": "string"
    },
    "status": {
      "type": "string"
    },
    "reports": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "time": {"type": "number"},
          "text": {"type": "string"}
        }
      },
      "required": ["time", "text"],
      "additionalProperties": false
    }
  },
  "required": [
    "name",
    "dueDate",
    "status"
  ],
  "additionalProperties": false
}
